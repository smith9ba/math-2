//Export a function for addition
exports.add = function(a,b) {
	return a + b;
};

//Export a function for subtraction
exports.subtract = function(a, b) {
	return a - b;
};

//Export a function for multiplication
exports.multiply = function(a, b) {
	return a * b;
};

//Export a function for division
exports.divide = function(a, b) {
	if (0 === b) {
		return "Error! Division by zero.";
	}
	return a / b;
};
